@model Dao.Models.UserModel
@{
    ViewData["Title"] = "Home Page";
    var userID = "";

    if (ViewBag.Users != null)
    {
        @foreach (var item in ViewBag.Users)
        {
            userID = item.UserID;
        }

    }
}

@if (ViewBag.Users != null)
{
    @foreach (var item in ViewBag.Users)
    {
        <input type="hidden" asp-for="UserID" value="@item.UserID" />
    }

}
<!--start-breadcrumbs-->
<div class="breadcrumbs">
    <div class="container">
        <div class="breadcrumbs-main">
            <ol class="breadcrumb">
                <li><a href="index.html">Home</a></li>
                <li class="active">New Products</li>
            </ol>
        </div>
    </div>
</div>
<!--end-breadcrumbs-->
<!--prdt-starts-->
<div class="prdt">
    <div class="container">
        <div class="prdt-top">
            <div class="col-md-12 prdt-left">

                @foreach (var item in ViewBag.Products)
                {
                    <div class="col-md-3 product-left p-left" style="margin-top: 20px">
                        <div class="product-main simpleCart_shelfItem">
                            <a asp-route-UserID="@userID" asp-controller="Product" asp-action="DetailProduct" asp-route-id="@item.Id" class="mask"><img class="img-responsive zoom-img" src="~/libclient/images/@item.ProductImage" alt="" /></a>
                            <div class="product-bottom">
                                <h3>@item.ProductName</h3>
                                <p>Explore Now</p>
                                <h4><a class="item_add" asp-route-UserID="@userID" asp-controller="Product" asp-action="DetailProduct" asp-route-id="@item.Id"></a><span class=" item_price" style="font-size:18px">$@item.Price</span></h4>
                            </div>
                            <div class="srch srch1">
                                <span>-50%</span>
                            </div>
                        </div>
                    </div>
                }
                <div class="clearfix"></div>

            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<!--product-end-->