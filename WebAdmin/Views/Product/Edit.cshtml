@model Dao.Models.ProductModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Edit</h1>

    <h4>User</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                @foreach (var item in ViewBag.Products)
                {
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Id" class="control-label"></label>
                        <input class="form-control" value="@item.Id" disabled />
                        <span asp-validation-for="Id" class="text-danger"></span>
                        <input type="hidden" asp-for="Id" value="@item.Id" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductCode" class="control-label"></label>
                        <input asp-for="ProductCode" class="form-control" value="@item.ProductCode" />
                        <span asp-validation-for="ProductCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Model" class="control-label"></label>
                        <input asp-for="Model" class="form-control" value="@item.Model" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductName" class="control-label"></label>
                        <input asp-for="ProductName" class="form-control" value="@item.ProductName" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductTypeId" class="control-label"></label>
                        <input asp-for="ProductTypeId" class="form-control" value="@item.ProductTypeId" />
                        <span asp-validation-for="ProductTypeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CaseSize" class="control-label"></label>
                        <input asp-for="CaseSize" class="form-control" value="@item.CaseSize" />
                        <span asp-validation-for="CaseSize" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CaseMaterial" class="control-label"></label>
                        <input asp-for="CaseMaterial" class="form-control" value="@item.CaseMaterial" />
                        <span asp-validation-for="CaseMaterial" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Gender" class="control-label"></label>
                        <input asp-for="Gender" class="form-control" value="@item.Crystal" />
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="WaterResistance" class="control-label"></label>
                        <input asp-for="WaterResistance" class="form-control" value="@item.WaterResistance" />
                        <span asp-validation-for="WaterResistance" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Function" class="control-label"></label>
                        <input asp-for="Function" class="form-control" value="@item.Function" />
                        <span asp-validation-for="Function" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="WatchMovement" class="control-label"></label>
                        <input asp-for="WatchMovement" class="form-control" value="@item.WatchMovement" />
                        <span asp-validation-for="WatchMovement" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" value="@item.Price" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Quantity" class="control-label"></label>
                        <input asp-for="Quantity" class="form-control" value="@item.Quantity" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="About" class="control-label"></label>
                        <input asp-for="About" class="form-control" value="@item.About" />
                        <span asp-validation-for="About" class="text-danger"></span>
                    </div>

                }

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
