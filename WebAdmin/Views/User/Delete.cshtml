
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>User</h4>
        <hr />
        @foreach (var item in ViewBag.userBus)
        {
            <dl class="row">
                <dt class="col-sm-2">
                    User ID
                </dt>
                <dd class="col-sm-10">
                    @item.UserID
                </dd>
                <dt class="col-sm-2">
                    Full Name
                </dt>
                <dd class="col-sm-10">
                    @item.FullName
                </dd>
                <dt class="col-sm-2">
                    Email
                </dt>
                <dd class="col-sm-10">
                    @item.Email
                </dd>
                <dt class="col-sm-2">
                    IsAdmin
                </dt>
                <dd class="col-sm-10">
                    @item.IsAdmin
                </dd>
                <dt class="col-sm-2">
                    Status
                </dt>
                <dd class="col-sm-10">
                    @item.Status
                </dd>
                
            </dl>

            <form asp-route-id="@item.UserID" asp-action="DeleteUser">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        }


    </div>

</div>

