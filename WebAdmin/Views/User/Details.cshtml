

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Details</h1>
    <div>
        <h4>User</h4>
        <hr />
        @foreach (var item in ViewBag.userBus)
        {
            <dl class="row">

                <dt class="col-sm-2">
                    User ID
                </dt>
                <dd class="col-sm-10">
                    @item.UserID
                </dd>
                <dt class="col-sm-2">
                    Full Name
                </dt>
                <dd class="col-sm-10">
                    @item.FullName
                </dd>
                <dt class="col-sm-2">
                    Email
                </dt>
                <dd class="col-sm-10">
                    @item.Email
                </dd>
                <dt class="col-sm-2">
                    isAdmin
                </dt>
                <dd class="col-sm-10">
                    @item.IsAdmin
                </dd>
                <dt class="col-sm-2">
                    Status
                </dt>
                <dd class="col-sm-10">
                    @item.Status
                </dd>
            </dl>
            <div>
                <a asp-action="Edit" asp-route-userID="@item.UserID">Edit</a> |
                <a asp-action="Index">Back to List</a>
            </div>
        }

    </div>
</div>

